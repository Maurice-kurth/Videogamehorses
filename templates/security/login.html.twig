{% extends 'base.html.twig' %}
{% block body %}
  <h1>Connexion sur le site</h1>

  <form action="{{ path('security_login') }}" method="post">
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Adresse email..." required="required" name="_username">
      <input type="password" class="form-control" placeholder="Mot de passe" required="required" name="_password">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn--priamry">Connexion</button>
    </div>
  </form>
{% endblock %}
