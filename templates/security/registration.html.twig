{% extends 'base.html.twig' %}
{% block body %}
  <h1>{% trans %}Sign up here{% endtrans %}</h1>

  {{form_start(form)}}
  {{form_row(form.username, {'label':'Nom d\'utilisateur','attr':{'placeholder':'Nom d\'utilisateur...'}})}}
  {{form_row(form.email, {'label':'Adresse e-mail','attr':{'placeholder':'mail@example.com'}})}}
  {{form_row(form.password, {'label':'Mot de passe'})}}
  {{form_row(form.confirm_password, {'label':'Confirmation du Mot de passe'})}}
  <button type="submit" class="btn btn--primary">{% trans %}Sign up{% endtrans %}</button>
  {{form_end(form)}}
{% endblock %}
